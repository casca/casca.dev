{
  "name": "casca.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:tailwind build:next",
    "build:next": "next build",
    "deploy-preview": "vercel --token $VERCEL_TOKEN",
    "dev": "npm-run-all -l build:tailwind --parallel watch:tailwind dev:next",
    "dev:next": "next dev",
    "forestry": "next",
    "start": "next start",
    "watch:tailwind": "chokidar tailwind.config.js styles/tailwind.css -c \"yarn build:tailwind\"",
    "build:tailwind": "tailwindcss-cli build styles/tailwind.css --no-autoprefixer -c tailwind.config.js -o tailwind.output.css"
  },
  "dependencies": {
    "chokidar-cli": "^2.1.0",
    "next": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "tailwindcss-cli": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2"
  }
}
