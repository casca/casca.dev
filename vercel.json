{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/(goto|covid)((?!/api)(?:/.*)?)",
      "destination": "https://$1.casca.dev/$1$2"
    }
  ],
  "redirects": [
    {
      "source": "/(goto|covid)/api/(.*)",
      "destination": "https://$1.casca.dev/api/$2"
    },
    {
      "source": "/goto/((?!favicon)[^/]+)",
      "destination": "https://goto.casca.dev/api/redirect/$1"
    },
    {
      "source": "/(cms|admin)",
      "destination": "/admin/cms"
    },
    {
      "source": "/repo/(.*)",
      "destination": "https://github.com/casca/$1"
    }
  ]
}
